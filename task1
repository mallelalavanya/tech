    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script>
        
        $(document).ready(function() {
            $(".button").on("click", function() {
                $(".up").val("");
            });
        });

      
            $(".button1").on("click", function() {
                let currentValue = $(".up").val();
                $(".up").val(currentValue.slice(0, -1));
            });

            function appendToInput(value) {
                let currentValue = $(".up").val();
                $(".up").val(currentValue + value);
            }




        
            $(".button2").on("click", function() {
                appendToInput('%');
            });

            $(".button3").on("click", function() {
                appendToInput('+');
            });

            $(".button4").on("click", function() {
                appendToInput('7');
            });

            $(".button5").on("click", function() {
                appendToInput('8');
            });

            $(".button6").on("click", function() {
                appendToInput('9');
            });
            $(".button7").on("click", function() {
                appendToInput('*');
            });

            $(".button8").on("click", function() {
                appendToInput('4');
            });

            $(".button9").on("click", function() {
                appendToInput('5');
            });

            $(".button10").on("click", function() {
                appendToInput('6');
            });

            $(".button11").on("click", function() {
                appendToInput('-');
            });

            $(".button12").on("click", function() {
                appendToInput('1');
            });

            $(".button13").on("click", function() {
                appendToInput('2');
            });

            $(".button14").on("click", function() {
                appendToInput('3');
            });

            $(".button15").on("click", function() {
                appendToInput('/');
            });
            $(".button16").on("click", function() {
                appendToInput('00');
            });
            $(".button17").on("click", function() {
            appendToInput('0');
            });

            $(".button18").on("click", function() {
            appendToInput('.');
            });



           
            $(".enter").on("click", function() {
                let expression = $(".up").val();
                try {
                    // Evaluate the expression
                    let result = eval(`(${expression})`);

                    $(".up").val(result).addClass("size");
                } catch (error) {
                    // Display "Error" if the expression is invalid
                    $(".up").val("Error");
                }
            });
    



    </script>

